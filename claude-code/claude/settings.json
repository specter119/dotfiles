{
  "alwaysThinkingEnabled": true,
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "scientific-skills@claude-scientific-skills": true
  },
  "env": {
    "ANTHROPIC_AUTH_TOKEN": "{{replace (command_output 'rbw get packy-api-key') '\n' ''}}",
    "ANTHROPIC_BASE_URL": "https://www.packyapi.com",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "ENABLE_LSP_TOOL": "1"
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "command": "~/.local/share/copilot-hooks/notify.sh",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ]
  },
  "model": "opus",
  "permissions": {
    "allow": [
      "Read(**/CLAUDE.md)",
      "Bash(ls:*)",
      "Bash(fd:*)",
      "Bash(rg:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(file:*)",
      "Bash(stat:*)",
      "Bash(pwd:*)",
      "Bash(whoami:*)",
      "Bash(which:*)",
      "Bash(du:*)",
      "Bash(df:*)",
      "Bash(ncdu:*)",
      "Bash(gdu:*)",
      "Bash(dysk:*)",
      "Bash(echo:*)",
      "Bash(man:*)",
      "Bash(dig:*)",
      "Bash(ss:*)",
      "Bash(ast-grep:*)",
      "Bash(git:status,show,diff,grep,branch,tag,log,rev-parse,config)",
      "Bash(ruff:*)",
      "Bash(mypy:*)",
      "Bash(pytest:*)",
      "Bash(uv:*)",
      "Bash(pre-commit:*)",
      "Bash(pdftoppm:*)",
      "mcp__exa__*",
      "mcp__plugin_context7_context7__*",
      "Skill(deep-research)",
      "Skill(wide-research)",
      "Skill(genimg)",
      "Skill(report)",
      "Skill(slide)",
      "Skill(typst)",
      "Skill(skill-creator)"
    ]
  },
  "skipWebFetchPreflight": true,
  "statusLine": {
    "command": "~/.local/bin/ccline",
    "padding": 0,
    "type": "command"
  }
}
