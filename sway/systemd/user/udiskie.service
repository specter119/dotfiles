[Unit]
Description=Removable disk automounter using udisks
PartOf=sway-session.target
After=sway-session.target

[Service]
ExecStartPre=/bin/bash -c 'while ! pgrep -x sway > /dev/null; do sleep 1; done'
ExecStart=/usr/bin/udiskie --no-menu-checkbox-workaround --appindicator --tray
Restart=on-failure

[Install]
WantedBy=sway-session.target
